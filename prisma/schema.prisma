generator client {
  provider = "prisma-client-js"
}

// sanjit wanted mongodb
datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid()) @map("_id")
  name          String
  username      String   @unique 
  email         String   @unique
}